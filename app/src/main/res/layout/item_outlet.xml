<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_idennama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA OUTLET :" />
            <TextView
                android:id="@+id/tv_idenalamat"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_idennama"
                android:layout_height="wrap_content"
                android:text="ALAMAT :"/>
            <TextView
                android:id="@+id/tv_idennotelp"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_idenalamat"
                android:layout_height="wrap_content"
                android:text="NO TELEPON :"/>
            <TextView
                android:id="@+id/tv_outletnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_idennama"
                android:text=""/>
            <TextView
                android:id="@+id/tv_outletalamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_outletnama"
                android:layout_toEndOf="@id/tv_idenalamat"
                android:text=""/>
            <TextView
                android:id="@+id/tv_outletphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_outletalamat"
                android:layout_toEndOf="@id/tv_idennotelp"
                android:text=""/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>